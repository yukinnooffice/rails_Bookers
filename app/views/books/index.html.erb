<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user ,:profile_image, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
            <th>name</th>
            <th><%= @user.name %></th>
            </tr>
            <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
            </tr>
            </tr>
          </tbody>
        </table>
        <h2>New book</h2>
        <%= form_for @book do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
            <p><%=f.text_field :title %></p>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <p><%= f.text_area :body%></p>
          </div>
          <div class="actions row">
            <%= f.submit class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
      </div>



       <div class="col-xs-9">
         <h2>Books</h2>
         <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <% @books.each do |book| %>
                  <td>
                    <%=link_to user_path(book.user) do %>
                      <%= attachment_image_tag book.user, :profile_image ,fallback: "no_image.jpg" %>
                    <%end%>
                  <td>
                    <%=link_to book_path(book) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td><%= book.body%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>

