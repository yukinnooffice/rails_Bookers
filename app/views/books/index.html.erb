<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<div class="col-lg-6" style="background-color: orange;">
<%= form_for @book do |f| %>
  <%=f.label :title %>
  <%=f.text_field :title %>

  <%=f.label :body %>
  <%=f.text_area :body %>

  <%=f.submit %>

<% end %>
</div>
  <div class="col-lg-6" style="background-color: orange;">
  <% @books.each do |book| %>
  <%=link_to book_path(book) do %>
  <p><%= book.title %>
  <%= book.body %></p>

  <% end %>
  <% end %>
  </div>
