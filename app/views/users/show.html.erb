 <%#= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
<%#= @user.name %>
<%#= @user.introduction %>
<%# if @user.id == current_user.id %>
<%#= @user.email %>
<%#= link_to "編集", edit_user_path(@user)%>
<%# end %>

<%#= form_for @book do |f| %>
<%#=f.label :title %>
<%#=f.text_field :title %>
<%#=f.label :body %>
<%#=f.text_area :body %>
<%#=f.submit %>


<div class="body">
  <div class="container">
<!--   <p id="notice">Welcome! You have signed up successfully.</p> -->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
      	    <th>name</th>
      	    <th><%= @user.name %></th>
            </tr>
            <tr>
      	    <th>introduction</th>
      	    <th><%= @user.introduction %></th>
            </tr>

            <tr>
            	<% if @user.id == current_user.id %>
      	      <th>email</th>
      	      <th><%= @user.email %></th>
      	    <% end %>
            </tr>
          </tbody>
        </table>

        <div class="row">
        <%= link_to "", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench "%>
        </div>

        <h2>New book</h2>
        <%= form_for @book do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
             <%=f.text_field :title %>
          </div>

          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <p class="col-xs-12 " ><%= f.text_area :body%></p>
          </div>
          <div class="actions row">
            <%#= f.submit :class=> "btn btn-primary col-xs-12" %>
            <%= f.submit class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book|%>
              <tr>
                <td>
                  <%=link_to user_path do %>
                    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%=link_to  book.title , book_path(book)%></td>
                <td><%= book.body%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


