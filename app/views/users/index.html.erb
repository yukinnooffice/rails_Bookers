<div class="container" style="background-color:;">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.username %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <% if @user.id == current_user.id %>
              <th>email</th>
              <th><%= @user.email %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    <h2>New book</h2>
      <%= form_for @book do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%=f.text_field :title %>
        </div>

        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <t class="col-xs-12 " ><%= f.text_area :body%></t>
        </div>
        <div class="actions row">
          <%#= f.submit :class=> "btn btn-primary col-xs-12" %>
          <%= f.submit class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <%=link_to user_path(user) do %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %></td>
                <td><%= user.username %></td>
                <td><%= link_to "show" , user_path(user)%></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

